@* Create mixin *@
@section Scripts {
    <script>
        
        const pageMixin = {
            data() {
                return {
                    count: 0
                };
            },
            methods: {
                increment() {
                    this.count++;
                },
                decrement() {
                    this.count--;
                }
            }
        };
    
    </script>
